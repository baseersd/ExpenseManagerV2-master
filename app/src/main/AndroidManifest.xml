<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="expmanager.idea.spark.in.expensemanager">

    <supports-screens android:xlargeScreens="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA"/>

    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature android:name="android.hardware.camera.flash" android:required="false" />
    <uses-feature android:name="android.hardware.camera"/>
    <uses-feature android:name="android.hardware.screen.landscape"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name=".ApplicationController"
        android:theme="@style/AppTheme">

        <activity
            android:name=".SplashScreen"

            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ForgotPasswordActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".StaffActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".SignUpActivity"
            android:screenOrientation="landscape" />
        <activity
            android:name=".LoginActivity"
            android:windowSoftInputMode="stateHidden|adjustPan"
            android:screenOrientation="landscape" />
        <activity
            android:name=".AdminActivity"
            android:screenOrientation="landscape" />

        <activity
            android:name=".UsePinActivity"
            android:screenOrientation="landscape" />

        <activity
            android:name=".ForgotPinActivity"
            android:screenOrientation="landscape" />

        <activity android:name=".ocr_usage.CaptureActivity"
            android:screenOrientation="landscape" />
        <activity android:name=".ocr_usage.HelpActivity"
            android:screenOrientation="landscape" />

    </application>

</manifest>