<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:checkMark">@drawable/ic_arrow_down</item>
    </style>
    <style name="spinnerItemStyleBlack" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:checkMark">@drawable/ic_arrow_down</item>
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>
    <style name="spinnerDropDownItemStyleBlack" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>
    <style name="editTextClassic" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:background">@android:drawable/edit_text</item>
    </style>

    <style name="button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:textColor">@color/editTextBackgroundWhite</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="pin_key_style">
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:paddingBottom">@dimen/margin_medium</item>
        <item name="android:paddingTop">@dimen/margin_medium</item>
        <item name="android:paddingLeft">@dimen/margin_large</item>
        <item name="android:paddingRight">@dimen/margin_large</item>
        <item name="android:background">@color/transparentGray</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="add_staff_label_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
    </style>

    <style name="add_staff_edittext_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edit_text_height</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:background">@drawable/edit_text_border</item>
        <item name="android:layout_marginTop">@dimen/margin_medium</item>
        <item name="android:text">""</item>
        <item name="android:ems">10</item>
        <item name="android:padding">@dimen/margin_small</item>
    </style>

    <style name="spinneritemstyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="menubar_item_style_txt">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">@dimen/margin_medium</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="organizational_setup_edittext_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/org_setup_edit_text_height</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:paddingLeft">@dimen/margin_medium</item>
        <item name="android:background">@drawable/edit_text_border</item>
        <item name="android:ems">12</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:textSize">@dimen/text_size_large</item>
    </style>

    <style name="plus_square_button_style">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_margin">@dimen/margin_large</item>
        <item name="android:text">+</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_xxlarge</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/theme_color</item>
    </style>

    <color name="black">#000000</color>
</resources>
