<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tangiblelinear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="20dp"
    android:paddingTop="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:background="@drawable/edit_text_border"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:weightSum="1">

            <expmanager.idea.spark.in.expensemanager.utils.CustomFonts
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Add Staff"
                android:textColor="#1fb598"
                android:textSize="@dimen/margin_large"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="120dp"
                    android:orientation="vertical">

                    <expmanager.idea.spark.in.expensemanager.utils.CustomFonts
                        android:id="@+id/tv_staff_name_label"
                        style="@style/add_staff_label_style"
                        android:text="Name"/>

                    <EditText
                        android:id="@+id/staff_name"
                        style="@style/add_staff_edittext_style"
                        android:inputType="textPersonName"/>

                    <expmanager.idea.spark.in.expensemanager.utils.CustomFonts
                        android:id="@+id/tv_staffemail_label"
                        style="@style/add_staff_label_style"
                        android:text="E-mail" />

                    <EditText
                        android:id="@+id/staffemail"
                        style="@style/add_staff_edittext_style"
                        android:layout_weight="0.20"
                        android:inputType="textEmailAddress"/>

                    <expmanager.idea.spark.in.expensemanager.utils.CustomFonts
                        android:id="@+id/tv_designation_label"
                        style="@style/add_staff_label_style"
                        android:text="Designation"/>

                    <EditText
                        android:id="@+id/designation"
                        style="@style/add_staff_edittext_style"
                        android:layout_weight="0.20"
                        android:inputType="textPersonName"/>


                    <expmanager.idea.spark.in.expensemanager.utils.CustomFonts
                        android:id="@+id/ggggdddgg"
                        style="@style/add_staff_label_style"
                        android:text="Address"/>

                    <EditText
                        android:id="@+id/staffaddress"
                        style="@style/add_staff_edittext_style"
                        android:layout_weight="0.20"
                        android:inputType="textPersonName"/>

                    <expmanager.idea.spark.in.expensemanager.utils.CustomFonts
                        android:id="@+id/gddggggg"
                        style="@style/add_staff_label_style"
                        android:text="Phone no" />

                    <EditText
                        android:id="@+id/staffphonenumber"
                        style="@style/add_staff_edittext_style"
                        android:layout_weight="0.20"
                        android:inputType="phone"
                        android:maxLength="14"
                        android:paddingLeft="5dp"/>


                    <expmanager.idea.spark.in.expensemanager.utils.CustomFonts
                        android:id="@+id/textView5"
                        style="@style/add_staff_label_style"
                        android:text="Shift Days"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <Spinner
                            android:id="@+id/spinnershift1"
                            style="@style/spinneritemstyle"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/edit_text_height"
                            android:layout_weight="0.45"
                            android:background="@drawable/edit_text_border"
                            android:ems="10"
                            android:inputType="textPersonName" />

                        <expmanager.idea.spark.in.expensemanager.utils.CustomFonts
                            android:id="@+id/texfftView6"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="0.1"
                            android:gravity="center"
                            android:text="to"
                            android:textColor="#1fb598"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/spinnershift2"
                            style="@style/spinneritemstyle"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/edit_text_height"
                            android:layout_weight="0.45"
                            android:background="@drawable/edit_text_border"
                            android:ems="10"
                            android:inputType="textPersonName" />
                    </LinearLayout>

                    <expmanager.idea.spark.in.expensemanager.utils.CustomFonts
                        android:id="@+id/textView6"
                        style="@style/add_staff_label_style"
                        android:text="Shift time"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <Spinner
                            android:id="@+id/spinnertime1"
                            style="@style/spinneritemstyle"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/edit_text_height"
                            android:layout_weight="0.45"
                            android:background="@drawable/edit_text_border"
                            android:ems="10"
                            android:inputType="textPersonName" />

                        <expmanager.idea.spark.in.expensemanager.utils.CustomFonts
                            android:id="@+id/texfftkoView6"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="0.1"
                            android:gravity="center"
                            android:text="to"
                            android:textColor="#1fb598"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <Spinner
                            android:id="@+id/spinnertime2"
                            style="@style/spinneritemstyle"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/edit_text_height"
                            android:layout_weight="0.45"
                            android:background="@drawable/edit_text_border"
                            android:ems="10"
                            android:inputType="textPersonName" />
                    </LinearLayout>


                    <expmanager.idea.spark.in.expensemanager.utils.CustomFonts
                        android:id="@+id/ggg"
                        style="@style/add_staff_label_style"
                        android:text="Started"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/edit_text_height"
                        android:layout_marginTop="20dp">

                        <TextView
                            android:id="@+id/started"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/edit_text_height"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentStart="true"
                            android:background="@drawable/edit_text_border"
                            android:ems="13"
                            android:textColor="@color/blue"
                            android:textSize="@dimen/text_size_medium"
                            android:inputType="textPersonName"
                            android:text="" />

                        <ImageView
                            android:id="@+id/img_calendar"
                            android:layout_width="@dimen/dp_40"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@id/started"
                            android:layout_alignEnd="@id/started"
                            android:layout_alignTop="@id/started"
                            android:src="@drawable/ic_date_range" />


                    </RelativeLayout>

                    <expmanager.idea.spark.in.expensemanager.utils.CustomFonts
                        android:id="@+id/ggghg"
                        style="@style/add_staff_label_style"
                        android:text="Current Salary"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <EditText
                            android:id="@+id/salary"
                            style="@style/add_staff_edittext_style"
                            android:layout_width="0dp"
                            android:layout_marginRight="10dp"
                            android:layout_weight="0.5"
                            android:inputType="number" />

                        <Spinner
                            android:id="@+id/spinnersal"
                            style="@style/spinneritemstyle"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/edit_text_height"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="0.5"
                            android:background="@drawable/edit_text_border"
                            android:ems="10"
                            android:inputType="textPersonName" />
                    </LinearLayout>


                    <Button
                        android:id="@+id/addstafftodb"
                        style="@style/button_style"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="25dp"
                        android:drawableLeft="@drawable/ic_add"
                        android:drawablePadding="@dimen/margin_small"
                        android:text="Add"
                        android:textSize="@dimen/text_size_xlarge" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btn_staff_pic"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center|end"
                    android:background="@drawable/circular_view"
                    android:scaleType="centerCrop"
                    android:src="@drawable/adduser" />
            </RelativeLayout>
        </LinearLayout>

        <Button
            android:id="@+id/cancelstaffdialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:layout_weight="0.1"
            android:background="#d4e15f"
            android:text="X"
            android:textColor="#fff"
            android:textSize="30sp" />
    </LinearLayout>
</ScrollView>