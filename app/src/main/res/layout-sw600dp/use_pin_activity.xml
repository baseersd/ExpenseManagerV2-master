<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg_large_withlogo">

    <View
        android:id="@+id/view"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="end"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/view"
        android:orientation="horizontal">

        <expmanager.idea.spark.in.expensemanager.utils.CustomFonts
            android:id="@+id/textVieww"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:text="New To Expense Manager?"
            android:textColor="@color/yellow"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold" />

        <Button
            android:id="@+id/sign_up"
            style="@style/button_style"
            android:text="@string/sign_up"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="100dip"
        android:layout_marginStart="100dip"
        android:layout_toRightOf="@+id/view"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Pin"
            android:textColor="#d4e157"
            android:textSize="@dimen/text_size_large" />

        <expmanager.idea.spark.in.expensemanager.utils.CustomFonts
            android:id="@+id/tv_enter_pin"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:background="@color/editTextBackgroundWhite"
            android:ems="9"
            android:gravity="center_vertical"
            android:hint=""
            android:maxLines="1"
            android:paddingLeft="6dp"
            android:text=""
            android:textColor="@color/blue"
            android:textSize="20dp" />

        <GridLayout
            android:id="@+id/grdnumpad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:columnCount="3"
            android:orientation="horizontal">

            <expmanager.idea.spark.in.expensemanager.utils.CustomFonts
                android:id="@+id/btn1"
                style="@style/pin_key_style"
                android:layout_column="0"
                android:layout_row="1"
                android:text=" 1"/>

            <expmanager.idea.spark.in.expensemanager.utils.CustomFonts
                android:id="@+id/btn2"
                style="@style/pin_key_style"
                android:layout_column="1"
                android:layout_row="1"
                android:text=" 2"/>

            <expmanager.idea.spark.in.expensemanager.utils.CustomFonts
                android:id="@+id/btn3"
                style="@style/pin_key_style"
                android:layout_column="2"
                android:layout_row="1"
                android:text=" 3"/>

            <expmanager.idea.spark.in.expensemanager.utils.CustomFonts
                android:id="@+id/btn4"
                android:layout_column="0"
                android:layout_row="2"
                style="@style/pin_key_style"
                android:text=" 4"/>

            <expmanager.idea.spark.in.expensemanager.utils.CustomFonts
                android:id="@+id/btn5"
                android:layout_column="1"
                android:layout_row="2"
                style="@style/pin_key_style"
                android:text=" 5"/>

            <expmanager.idea.spark.in.expensemanager.utils.CustomFonts
                android:id="@+id/btn6"
                android:layout_column="2"
                android:layout_row="2"
                style="@style/pin_key_style"
                android:text=" 6"/>

            <expmanager.idea.spark.in.expensemanager.utils.CustomFonts
                android:id="@+id/btn7"
                android:layout_column="0"
                android:layout_row="3"
                style="@style/pin_key_style"
                android:text=" 7"/>

            <expmanager.idea.spark.in.expensemanager.utils.CustomFonts
                android:id="@+id/btn8"
                android:layout_column="1"
                android:layout_row="3"
                style="@style/pin_key_style"
                android:text=" 8"/>

            <expmanager.idea.spark.in.expensemanager.utils.CustomFonts
                android:id="@+id/btn9"
                android:layout_column="2"
                android:layout_row="3"
                style="@style/pin_key_style"
                android:text=" 9"/>

            <expmanager.idea.spark.in.expensemanager.utils.CustomFonts
                android:id="@+id/btn_ok"
                android:layout_column="0"
                android:layout_gravity="center_horizontal"
                android:layout_row="4"
                android:gravity="center"
                android:paddingBottom="20dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:paddingTop="20dp"
                style="@style/pin_key_style"
                android:background="@color/blue"
                android:textColor="@color/white"
                android:text="OK"/>

            <expmanager.idea.spark.in.expensemanager.utils.CustomFonts
                android:id="@+id/btn0"
                android:layout_column="1"
                android:layout_row="4"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                style="@style/pin_key_style"
                android:text=" 0"/>

            <expmanager.idea.spark.in.expensemanager.utils.CustomFonts
                android:id="@+id/btn_clear"
                android:layout_column="2"
                android:layout_row="4"
                style="@style/pin_key_style"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:background="@color/blue"
                android:textColor="@color/white"
                android:text="C" />


        </GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="70dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/forgot_pin"
                style="@style/button_style"
                android:layout_marginRight="5dp"
                android:text="Forgot Pin"/>

            <Button
                android:id="@+id/use_password"
                style="@style/button_style"
                android:layout_marginLeft="5dp"
                android:text="Use Password"/>
        </LinearLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerInParent="true"/>

</RelativeLayout>