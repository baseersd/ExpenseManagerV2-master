<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/tangiblelinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingBottom="20dp"
        android:paddingTop="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="@drawable/edit_text_border"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <expmanager.idea.spark.in.expensemanager.utils.CustomFonts
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Add Tangible Expenses"
                android:textColor="#1fb598"
                android:textSize="@dimen/text_size_xlarge"
                android:textStyle="bold" />

            <expmanager.idea.spark.in.expensemanager.utils.CustomFonts
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView3"
                android:layout_marginTop="20dp"
                android:text="Category"
                android:textColor="#1fb598"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold" />

            <AutoCompleteTextView
                android:id="@+id/categoryval"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height"
                android:layout_below="@id/textView4"
                android:layout_margin="@dimen/margin_extra_small"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/edit_text_border"
                android:ems="10"
                android:inputType="textPersonName"
                android:paddingLeft="@dimen/margin_small"
                android:paddingRight="@dimen/margin_small"
                android:text="" />

            <expmanager.idea.spark.in.expensemanager.utils.CustomFonts
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/categoryval"
                android:layout_marginRight="@dimen/margin_medium"
                android:layout_marginTop="@dimen/margin_medium"
                android:text="When"
                android:textColor="#1fb598"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/whenval"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height"
                android:layout_below="@id/textView5"
                android:layout_margin="@dimen/margin_small"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_text_background"
                android:ems="10"
                android:inputType="textPersonName" />

            <!--android:background="@drawable/edit_text_border"-->

            <expmanager.idea.spark.in.expensemanager.utils.CustomFonts
                android:id="@+id/dddd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/whenval"
                android:layout_marginTop="20dp"
                android:text="Price"
                android:textColor="#1fb598"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/priceval"
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_text_height"
                android:layout_below="@id/dddd"
                android:layout_margin="@dimen/margin_small"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_text_border"
                android:ems="10"
                android:inputType="textPersonName"
                android:padding="@dimen/margin_extra_small"
                android:text="" />


            <Button
                android:id="@+id/addtanexptoDb"
                style="@style/button_style"
                android:layout_below="@id/priceval"
                android:layout_marginLeft="@dimen/dp_40"
                android:layout_marginTop="25dp"
                android:drawableLeft="@drawable/ic_plus"
                android:drawablePadding="@dimen/margin_large"
                android:text="ADD" />
        </RelativeLayout>

        <Button
            android:id="@+id/canceltandialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:layout_weight="0.9"
            android:background="#d4e15f"
            android:text="X"
            android:textColor="#fff"
            android:textSize="30sp" />
    </LinearLayout>

</RelativeLayout>

