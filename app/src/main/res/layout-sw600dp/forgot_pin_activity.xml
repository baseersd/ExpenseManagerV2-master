<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg_large_withlogo">

    <View
        android:id="@+id/view"
        android:layout_width="1dip"
        android:layout_height="match_parent"
        android:layout_centerInParent="true" />


    <Button
        android:id="@+id/btn_back"
        style="@style/button_style"
        android:layout_gravity="end"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="bold"
        android:text="@string/back"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="52dp"
        android:layout_toRightOf="@id/view"
        android:gravity="center_vertical"
        android:orientation="vertical">


        <expmanager.idea.spark.in.expensemanager.utils.CustomFonts
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dip"
            android:text="Forgot Pin"
            android:textColor="@color/yellow"
            android:textSize="@dimen/text_size_large"
            android:textStyle="normal" />


        <expmanager.idea.spark.in.expensemanager.utils.CustomFonts
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:text="@string/please_enter_your_mail"
            android:textSize="@dimen/text_size_medium"
            android:textColor="@color/editTextBackgroundWhite"
            android:textStyle="normal" />


        <EditText
            android:layout_width="wrap_content"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginTop="30dip"
            android:background="@drawable/edit_text_background"
            android:ems="20"
            android:hint="Username"
            android:maxLines="1"
            android:visibility="gone"
            android:paddingLeft="5dp" />


        <EditText
            android:id="@+id/email_forgot_password"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/edit_text_height"
            android:layout_marginTop="30dip"
            android:background="@drawable/edit_text_background"
            android:ems="20"
            android:hint="Email"
            android:maxLines="1"
            android:paddingLeft="5dp" />


        <Button
            android:id="@+id/btn_forgot_password"
            style="@style/button_style"
            android:layout_marginTop="30dp"
            android:text="Send New Pin"/>


    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerInParent="true"/>

</RelativeLayout>