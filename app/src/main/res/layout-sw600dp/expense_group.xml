<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_expense_group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@drawable/rounded_corner"
    android:orientation="horizontal"
    android:weightSum="7"
    android:padding="5dp">

    <expmanager.idea.spark.in.expensemanager.utils.CustomFonts
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="2"
        android:padding="20dp"
        android:layout_margin="@dimen/margin_extra_small"
        android:textColor="@color/editTextBackgroundWhite"
        android:textSize="20dp"/>


    <expmanager.idea.spark.in.expensemanager.utils.CustomFonts
        android:id="@+id/items"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:layout_margin="@dimen/margin_extra_small"
        android:textColor="@color/editTextBackgroundWhite"
        android:textSize="18dp" />

    <expmanager.idea.spark.in.expensemanager.utils.CustomFonts
        android:id="@+id/cost"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:layout_margin="@dimen/margin_extra_small"
        android:textColor="@color/editTextBackgroundWhite"
        android:textSize="18dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/approve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:visibility="visible"
        android:text="@string/fa_check"
        android:textColor="@color/theme_color"
        android:layout_margin="@dimen/margin_extra_small"
        android:background="@drawable/circular_view_white"
        android:textSize="@dimen/text_size_large" />
        <TextView
            android:id="@+id/reject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:visibility="visible"
            android:text="@string/fa_cross"
            android:layout_margin="@dimen/margin_extra_small"
            android:textColor="@color/theme_color"
            android:background="@drawable/circular_view_white"
            android:textSize="@dimen/text_size_large" />
        <TextView
            android:id="@+id/view_invoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:visibility="visible"
            android:layout_margin="@dimen/margin_extra_small"
            android:background="@drawable/circular_view_white"
            android:text="@string/fa_file_photo"
            android:textColor="@color/theme_color"
            android:textSize="@dimen/text_size_large" />
    </LinearLayout>
    <TextView
        android:id="@+id/list_item_genre_arrow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:text="@string/fa_arrow_down"
        android:textSize="@dimen/text_size_large"
        android:textColor="@color/white"
        android:tint="#fff" />


</LinearLayout>