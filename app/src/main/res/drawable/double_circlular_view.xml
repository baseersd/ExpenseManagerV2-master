<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="oval">
            <solid
                android:color="#FFFFFF"/>
            <padding
                android:bottom="15dp"
                android:left="15dp"
                android:right="15dp"
                android:top="15dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/circular_ring_color"/>
        </shape>
    </item>
    <item>
        <shape
            android:shape="oval">
            <solid
                android:color="@color/circular_ring_color"/>

            <size
                android:width="40dp"
                android:height="40dp"/>
            <stroke
                android:width="1dp"
                android:color="@color/circular_ring_color"/>
        </shape>

    </item>
</layer-list>