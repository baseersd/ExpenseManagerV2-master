<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">


        <TextView
            android:id="@+id/txt_dashboard_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:gravity="left|center_vertical"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="DashBoard"
            android:textSize="24sp"
            android:textStyle="bold" />


        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:background="#ffffff"
            android:shrinkColumns="*"
            android:stretchColumns="*">


            <!-- Row 1 with single column -->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal">


                <TextView
                    android:background="#4a148c"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_span="8"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:text="Profit"
                    android:textColor="#fff"
                    android:textSize="35dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="3"
                    android:background="#1e967d"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_prev_month1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="DEC"
                        android:textColor="#fff"
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/txt_prev_month1_year"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="2016"
                        android:textColor="#fff"
                        android:textSize="16dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="3"
                    android:background="#1fb598"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_prev_month2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="NOV"
                        android:textColor="#fff"
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/txt_prev_month2_year"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="2016"
                        android:textColor="#fff"
                        android:textSize="16dp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="3"
                    android:background="#1e967d"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_prev_month3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="OCT"
                        android:textColor="#fff"
                        android:textSize="25dp" />

                    <TextView
                        android:id="@+id/txt_prev_month3_year"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="2016"
                        android:textColor="#fff"
                        android:textSize="16dp" />

                </LinearLayout>


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center_horizontal">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#4a148c"
                    android:layout_span="8">

                    <LinearLayout
                        android:id="@+id/first"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_current_month"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingLeft="10dp"
                            android:paddingRight="12dp"
                            android:text="JAN"
                            android:textColor="#fff"
                            android:textSize="30dp" />

                        <TextView
                            android:id="@+id/txt_current_year"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="5dip"
                            android:text="2016"
                            android:textColor="#fff"
                            android:textSize="20dp" />

                    </LinearLayout>


                    <TextView
                        android:id="@+id/txt_current_month_profit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/first"
                        android:text="$5000"
                        android:layout_marginLeft="20dp"
                        android:textColor="#fff"
                        android:textSize="60sp" />


                </RelativeLayout>


                <TextView
                    android:id="@+id/txt_prev_month1_profit"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_span="3"
                    android:background="#1e967d"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="$4000"
                    android:textColor="#fff"
                    android:textSize="26dp" />


                <TextView
                    android:id="@+id/txt_prev_month2_profit"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_span="3"
                    android:background="#1fb598"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="$4000"
                    android:textColor="#fff"
                    android:textSize="26dp" />

                <TextView
                    android:id="@+id/txt_prev_month3_profit"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_span="3"
                    android:background="#1e967d"
                    android:gravity="center_vertical"
                    android:padding="10dp"
                    android:text="$4000"
                    android:textColor="#fff"
                    android:textSize="26dp" />


            </TableRow>

        </TableLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="#1fb598">

                <TextView
                    android:id="@+id/textVsriew8142"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="2dp"
                    android:padding="10dp"
                    android:text="Income"
                    android:textColor="#fff"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/txt_current_month_income"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="22dp"
                    android:layout_marginRight="2dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="$ 15000"
                    android:textColor="#fff"
                    android:textSize="40sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_weight="1"
                android:background="#1fb598">

                <TextView
                    android:id="@+id/textVfgsriew8142"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="2dp"
                    android:padding="10dp"
                    android:text="Tangible expanse"
                    android:textColor="#fff"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/txt_current_month_tangible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="22dp"
                    android:layout_marginRight="2dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="$ 15000"
                    android:textColor="#fff"
                    android:textSize="40sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:background="#1fb598"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textVsrie23w8142"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="2dp"
                    android:padding="10dp"
                    android:text="In Tangible expanse"
                    android:textColor="#fff"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/txt_current_month_intangible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="22dp"
                    android:layout_marginRight="2dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="$ 15000"
                    android:textColor="#fff"
                    android:textSize="40sp" />
            </RelativeLayout>
        </LinearLayout>


        <Spinner
            android:id="@+id/mothspinner"
            android:layout_width="269dp"
            android:layout_height="40dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/edit_text_border" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:background="#26bed5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tewextVsrie23w8142"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_margin="10dp"
                        android:gravity="center|bottom"
                        android:text="Profit"
                        android:textColor="#fff"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/txt_selected_month_profit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="24dp"
                        android:layout_marginLeft="10dp"
                        android:text="$ 4600"
                        android:textColor="#fff"
                        android:textSize="30sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:background="#26bed5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textVrtsrie23w8142"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_margin="10dp"
                        android:text="Income"
                        android:textColor="#fff"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/txt_selected_month_income"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="24dp"
                        android:layout_marginLeft="10dp"
                        android:text="$ 14000"
                        android:textColor="#fff"
                        android:textSize="30sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:background="#26bed5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textVsiorie23w8142"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_margin="10dp"
                        android:text="Tangible Expenses"
                        android:textColor="#fff"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/txt_selected_month_tangible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="24dp"
                        android:layout_marginLeft="10dp"
                        android:text="$ 9000"
                        android:textColor="#fff"
                        android:textSize="30sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="3dp"
                    android:layout_weight="1"
                    android:background="#26bed5"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textVsyurie23w8142"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_margin="10dp"
                        android:text="In Tangible Expenses"
                        android:textColor="#fff"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/txt_selected_month_intangible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="24dp"
                        android:layout_marginLeft="10dp"
                        android:text="$ 400"
                        android:textColor="#fff"
                        android:textSize="30sp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/hhh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:gravity="left|center_vertical"
            android:paddingBottom="15dp"
            android:paddingTop="15dp"
            android:text="Profit Graph"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!--<com.github.mikephil.charting.charts.BarChart-->
