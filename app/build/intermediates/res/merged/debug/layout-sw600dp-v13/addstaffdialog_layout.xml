<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tangiblelinear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingBottom="20dp"
    android:paddingTop="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:background="@drawable/edit_text_border"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:weightSum="1">

            <expmanager.idea.spark.in.expensemanager.utils.CustomFonts
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Add Staff"
                android:textColor="#1fb598"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <expmanager.idea.spark.in.expensemanager.utils.CustomFonts
                        android:id="@+id/ssddsd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Name"
                        android:textColor="#1fb598"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/staff_name"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginTop="20dp"
                        android:layout_weight="0.12"
                        android:background="@drawable/edit_text_border"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:text="" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/btn_staff_pic"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center|end"
                    android:background="@drawable/circular_view"
                    android:scaleType="centerCrop"
                    android:src="@drawable/adduser" />
            </RelativeLayout>


            <expmanager.idea.spark.in.expensemanager.utils.CustomFonts
                android:id="@+id/ggfffg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="E-mail"
                android:textColor="#1fb598"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/staffemail"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_text_border"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:text=""
                android:layout_weight="0.20" />

            <expmanager.idea.spark.in.expensemanager.utils.CustomFonts
                android:id="@+id/gggggg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Designation"
                android:textColor="#1fb598"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/designation"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_text_border"
                android:ems="10"
                android:inputType="textPersonName"
                android:text=""
                android:layout_weight="0.20" />


            <expmanager.idea.spark.in.expensemanager.utils.CustomFonts
                android:id="@+id/ggggdddgg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Address"
                android:textColor="#1fb598"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/staffaddress"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_text_border"
                android:ems="10"
                android:inputType="textPersonName"
                android:text=""
                android:layout_weight="0.20" />

            <expmanager.idea.spark.in.expensemanager.utils.CustomFonts
                android:id="@+id/gddggggg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Phone no"
                android:textColor="#1fb598"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/staffphonenumber"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:paddingLeft="5dp"
                android:maxLength="14"
                android:background="@drawable/edit_text_border"
                android:ems="10"
                android:inputType="phone"
                android:text=""
                android:layout_weight="0.20" />


            <expmanager.idea.spark.in.expensemanager.utils.CustomFonts
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Shift Days"
                android:textColor="#1fb598"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <Spinner
                    android:id="@+id/spinnershift1"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.3"
                    android:ems="10"
                    android:inputType="textPersonName" />
                <!--android:background="@drawable/edit_text_border"-->

                <expmanager.idea.spark.in.expensemanager.utils.CustomFonts
                    android:id="@+id/texfftView6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.05"
                    android:gravity="center"
                    android:text="to"
                    android:textColor="#1fb598"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinnershift2"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.3"
                    android:ems="10"
                    android:inputType="textPersonName" />
                <!--android:background="@drawable/edit_text_border"-->
            </LinearLayout>

            <expmanager.idea.spark.in.expensemanager.utils.CustomFonts
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Shift time"
                android:textColor="#1fb598"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <Spinner
                    android:id="@+id/spinnertime1"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.3"
                    android:ems="10"
                    android:inputType="textPersonName" />

                <!--android:background="@drawable/edit_text_border"-->

                <expmanager.idea.spark.in.expensemanager.utils.CustomFonts
                    android:id="@+id/texfftkoView6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.05"
                    android:gravity="center"
                    android:text="to"
                    android:textColor="#1fb598"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <Spinner
                    android:id="@+id/spinnertime2"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="0.3"
                    android:ems="10"
                    android:inputType="textPersonName" />
                <!--android:background="@drawable/edit_text_border"-->
            </LinearLayout>



            <expmanager.idea.spark.in.expensemanager.utils.CustomFonts
                android:id="@+id/ggg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Started"
                android:textColor="#1fb598"
                android:textSize="18sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/started"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/edit_text_border"
                    android:ems="13"
                    android:inputType="textPersonName"
                    android:text="" />

                <ImageView
                    android:id="@+id/img_calendar"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/started"
                    android:layout_alignEnd="@id/started"
                    android:layout_alignTop="@id/started"
                    android:src="@drawable/ic_date_range" />


            </RelativeLayout>





            <expmanager.idea.spark.in.expensemanager.utils.CustomFonts
                android:id="@+id/ggghg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Current Salary"
                android:textColor="#1fb598"
                android:textSize="18sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="1">

                <EditText
                    android:id="@+id/salary"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="0.3"
                    android:background="@drawable/edit_text_border"
                    android:ems="10"
                    android:inputType="number" />

                <Spinner
                    android:id="@+id/spinnersal"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.3"
                    android:ems="10"
                    android:inputType="textPersonName" />

                <!--android:background="@drawable/edit_text_border"-->
            </LinearLayout>

            <Button
                android:id="@+id/addstafftodb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="25dp"
                android:background="#1fb598"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:text="Add"
                android:textColor="#fff"
                android:textStyle="bold" />
        </LinearLayout>

        <Button
            android:id="@+id/cancelstaffdialog"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="30dp"
            android:layout_weight="0.1"
            android:background="#d4e15f"
            android:text="X"
            android:textColor="#fff"
            android:textSize="30sp" />
    </LinearLayout>
</ScrollView>